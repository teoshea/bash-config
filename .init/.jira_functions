if [ -f ~/.jira_globals ]; then . ~/.jira_globals; fi

invoke-jira-restmethod()
{
    local password=`gpg --decrypt .jira_authentication`
    local base64_password="$(echo -ne $password | base64)"
    
    local header_content_type="Content-Type: application/json"
    local header_authorization="Authorization: Basic $base64_password"

    curl -X GET -H "Authorization: Basic $base64_password" -H "Content-Type: application/json" "$jira_rest_url/issue/MI-10224"
}
